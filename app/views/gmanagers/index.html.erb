<h2>Current project groups</h2>



<div class="splitcontentleft">
<table class="list groups">
<thead>
<th> Groups </th>
<th> Users </th>
<th> Owner </th>
<th> </th>
</thead>

<tbody>
<% for k,v in @groups %>
<tr>

<td><%= link_to_group(k) %></td>
<td> <%= v.count %> </td>
<td> <%= render_user_name(render_group_owner(k)) %>  </td>
<td class="button"> <%= link_to "Delete",{:controller=>"gmanagers", :action=>"destroy",:id=>k,:project_id=>params["project_id"]}, :method=>"delete", :confirm=>"Are you sure?",:class=>"icon icon-del"%></td>

</tr>
<% end %>
</tbody>
</table>

<div class="error"><label class="error"><%= params['error'] %></label></div>
<br>


<br>
<%= link_to "Create group",new_gmanager_path(:project_id=>params["project_id"]), :class => "icon icon-add" %>
</div>
